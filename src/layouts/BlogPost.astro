---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, isToc } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		{!isToc && (<style is:global>.toc { display: none; }</style>)}
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="prose m-auto p-4 dark:text-neutral-200 text-neutral-600 w-720px max-w-3xl">
					<div class="title mb-4 py-4 px-0 text-center leading-5">
						<h1 class="dark:text-white text-black text-center font-bold text-3xl mb-4">{title}</h1>
						<div class="date mb-4 dark:text-neutral-200 text-gray-500 text-base">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on italic py-2 text-sm">
										最終更新日: <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<div class="hero-image w-full">
							{heroImage && <img class="block mx-auto rounded-2xl shadow-2xl" width={720} height={360} src={heroImage} alt="" />}
						</div>
					</div>
					<div class="markdown-body">
						<slot/>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	.markdown-body h1, h2, h3, h4, h5, h6 {
		@apply leading-7
	}
	.markdown-body h1 {
		@apply text-3xl mb-4 pb-2
	}
	.markdown-body h2 {
		@apply text-2xl mb-4 pb-2
	}
	.markdown-body h3 {
		@apply text-xl mb-2 pb-2
	}
	.markdown-body h4 h5 h6 {
		@apply text-lg
	}
	.markdown-body h1, h2, h3 {
		@apply font-bold
	}
	.markdown-body h1, h2 {
		@apply border-dashed border-b-2 border-gray-200
	}
	.markdown-body blockquote {
		@apply border-l-4 m-0 pl-4 dark:border-l-gray-600
	}
	.markdown-body p {
		@apply text-base mb-4 text-neutral-600 dark:text-neutral-200
	}
	.markdown-body ol {
		@apply list-decimal list-inside my-1 ml-4 text-base mb-4
	}
	.markdown-body ul {
		@apply list-disc list-inside ml-4 my-1 text-base mb-4
	}
	.markdown-body pre {
		@apply mx-0 my-4 p-4 rounded-xl shadow-2xl text-sm
	}
	.markdown-body pre code {
		@apply bg-transparent
	}
	.markdown-body code {
		@apply px-1 py-0.5 bg-slate-200 rounded-md dark:bg-stone-800
	}
	.markdown-body table {
		@apply w-full table-auto border-solid border-2 mb-4 border-stone-300
	}
	.markdown-body table thead {
		@apply border-b-2 border-dashed border-stone-300
	}
	.markdown-body table th {
		@apply px-4 py-2 border-x-2 border-dashed border-stone-300
	}
	.markdown-body table td {
		@apply px-4 py-2 border-x-2 border-solid border-stone-300
	}
	.markdown-body img {
		@apply w-full h-auto rounded-xl shadow-2xl my-4
	}
	.markdown-body b, strong {
		@apply font-bold
	}
	.markdown-body em {
		@apply font-semibold
	}
	.markdown-body a {
		@apply visited:text-indigo-800 dark:visited:text-yellow-500 text-indigo-700 dark:text-yellow-400 hover:underline hover:text-indigo-800 dark:hover:text-yellow-500
	}
	.markdown-body hr {
		@apply border-solid border-b-2 border-gray-200 my-4
	}
	.markdown-body .toc {
		@apply border-solid border-2 m-4 pt-4 border-gray-800 rounded-lg dark:bg-stone-900
	}
	.markdown-body .footnotes {
		@apply border-t-2 border-dashed border-gray-600 mt-8 pt-4
	}
	.markdown-body .footnotes ol {
		@apply ml-4 text-sm
	}
	.markdown-body .footnotes p {
		@apply text-sm
	}
	.markdown-body .twitter-tweet {
		@apply m-6 rounded-lg border-[#00acee]
	}
	.markdown-body lite-youtube {
		@apply rounded-lg m-4
	}
</style>
